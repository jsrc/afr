.page {
  min-height: 100vh;
  padding: 24rpx;
}

.state {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #314a62;
}

.state-error {
  color: #b42318;
}

.content-wrap {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section {
  border-radius: 22rpx;
  padding: 24rpx;
  background: #ffffff;
  box-shadow: 0 10rpx 28rpx rgba(9, 30, 66, 0.08);
}

.section-main {
  background: linear-gradient(140deg, #1f4e84 0%, #2b70b6 100%);
  color: #ffffff;
}

.title-cn {
  font-size: 34rpx;
  font-weight: 700;
  line-height: 1.45;
}

.title-en {
  margin-top: 8rpx;
  font-size: 24rpx;
  line-height: 1.45;
  opacity: 0.92;
}

.meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  opacity: 0.95;
}

.section-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #15324f;
}

.section-body {
  margin-top: 12rpx;
  font-size: 26rpx;
  line-height: 1.7;
  color: #2c4864;
  white-space: pre-wrap;
}

.section-empty {
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 1.6;
  color: #9a6700;
  background: #fff8e1;
  border-radius: 12rpx;
  padding: 14rpx;
}

.section-link {
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 1.6;
  color: #2b70b6;
  word-break: break-all;
}
